select strftime('%H',usage_by_hour.timestamp) as hour,users.mac as mac, name, sum(data_in) as data_in,sum(data_out) as data_out,(select account from connections where user_id=users.id) as account from usage_by_hour join users on usage_by_hour.user_id=users.id {1} group by hour,usage_by_hour.user_id;