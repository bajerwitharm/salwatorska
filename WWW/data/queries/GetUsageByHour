select to_char(usage_by_hour.timestamp,'HH24') as hour,users.mac as mac, name, sum(data_in) as data_in,sum(data_out) as data_out,(select account from connections where user_id=users.id limit 1) as account from usage_by_hour join users on usage_by_hour.user_id=users.id {1} group by hour,users.id,usage_by_hour.user_id;