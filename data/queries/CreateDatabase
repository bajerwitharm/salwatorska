CREATE TABLE IF NOT EXISTS users (id INTEGER primary key autoincrement, timestamp DATETIME, mac TEXT NOT NULL, name TEXT, ip TEXT, bridge TEXT);
CREATE TABLE IF NOT EXISTS usage (timestamp DATETIME primary key, mac TEXT UNIQUE NOT NULL, data_in INTEGER, data_out INTEGER, FOREIGN KEY(mac) REFERENCES users(mac));
CREATE TABLE IF NOT EXISTS connections (timestamp DATETIME primary key, mac TEXT, ip TEXT, station INTEGER, FOREIGN KEY(mac) REFERENCES users(mac));
CREATE TABLE IF NOT EXISTS queries (id INTEGER primary key autoincrement, timestamp DATETIME, ip TEXT, url TEXT, FOREIGN KEY(ip) REFERENCES connections(ip));
CREATE TABLE IF NOT EXISTS logs (id INTEGER primary key autoincrement, timestamp DATETIME, host TEXT, program TEXT, msg TEXT);
