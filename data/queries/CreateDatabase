BEGIN TRANSACTION;
CREATE TABLE IF NOT EXISTS users (id INTEGER primary key autoincrement, timestamp DATETIME, mac TEXT NOT NULL, name TEXT, ip TEXT, bridge TEXT, UNIQUE(mac,name,ip,bridge));
CREATE TABLE IF NOT EXISTS usage (id INTEGER primary key autoincrement, timestamp DATETIME, mac TEXT NOT NULL, data_in INTEGER, data_out INTEGER, FOREIGN KEY(mac) REFERENCES users(mac));
CREATE TABLE IF NOT EXISTS connections (id INTEGER primary key autoincrement,timestamp DATETIME, result TEXT, account TEXT, ap TEXT, mac text, FOREIGN KEY(mac) REFERENCES users(mac));
CREATE TABLE IF NOT EXISTS queries (id INTEGER primary key autoincrement, timestamp DATETIME, ip TEXT, url TEXT, FOREIGN KEY(ip) REFERENCES connections(ip));
CREATE TABLE IF NOT EXISTS logs (id INTEGER primary key autoincrement, timestamp DATETIME, host TEXT, program TEXT, msg TEXT);
CREATE TABLE IF NOT EXISTS stats (id INTEGER primary key autoincrement, timestamp DATETIME, router TEXT, rx_bytes INTEGER, rx_packets INTEGER, tx_bytes INTEGER, tx_packets INTEGER,load INTEGER);
END TRANSACTION;