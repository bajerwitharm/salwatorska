select t1.firstseen,t1.lastseen,t1.name,t1.mac,t2.accounts,t1.data_in,t1.data_out from (select mac,group_concat(DISTINCT account) AS accounts from connections group by mac) t2 inner join (select users.timestamp AS firstseen,usage.timestamp AS lastseen,users.name AS name,mac,data_in,data_out from usage join users using(mac) group by mac) t1 on t1.mac=t2.mac;